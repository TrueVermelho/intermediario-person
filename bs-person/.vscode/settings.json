{
  // ðŸŽ¯ FormataÃ§Ã£o e comportamento do editor
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },


  // ðŸ“ Arquivos
  "files.eol": "\n",
  "files.insertFinalNewline": true,

  // ðŸ§  TypeScript / JavaScript
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  
  // ðŸ§¹ ESLint
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,

  // ðŸ“ Fontes do Editor
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.lineHeight": 24,
  "editor.letterSpacing": -0.5,

  // ðŸŽ¯ Cor da seta/cursor
  "workbench.colorCustomizations": {
    // ðŸŽ¯ Cor da seta/cursor
    "editorCursor.foreground": "#FF4081",

    // (Opcional) Cor de destaque da linha onde o cursor estÃ¡
    "editor.lineHighlightBackground": "#b340ff20" // transparente
  },


  // ðŸŽ¨ Estilo do cÃ³digo
  "editor.tokenColorCustomizations": {
    "comments": "#00ff4c",     // ComentÃ¡rios
    "keywords": "#ff458c",     // Palavras-chave
    "strings": "#ffe600",      // Strings
    "functions": "#b89aff",    // FunÃ§Ãµes
    "variables": "#00c3ff",    // VariÃ¡veis
    "numbers": "#2df1ff",      // NÃºmeros
    "types": "#9cffeb",        // Tipos
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },

  // ðŸŽ¨ Tema e Ã­cones
  // "workbench.colorTheme": "Default Dark Modern", // (Opcional)
  "workbench.iconTheme": "material-icon-theme",

  // ðŸ’» UI do VSCode
  "workbench.statusBar.visible": true,
  "editor.cursorSmoothCaretAnimation": "off", // on -> editor lento da animacao
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
